@model List<SupportRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Peer/_PeerLayout.cshtml";
}

<h3 class="text-center">Support Requests</h3>
<div class="row">
    <div>
        <form asp-action="RequestPage" method="post">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Request Id</th>
                    <th>Status</th>
                    <th>Islemler</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Status</td>
                        @if (item.Status == DataStatus.AssignedToPeer || item.Status == DataStatus.Open)
                        {
                            <td><a class="btn btn-info" asp-action="RequestPage" asp-route-id="@item.Id">Go To Request</a></td>
                        }
                    </tr>
                }
        </table>
        </form>
    </div>

</div>