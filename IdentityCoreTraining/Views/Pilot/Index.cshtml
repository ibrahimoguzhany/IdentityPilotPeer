@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Pilot/_PilotLayout.cshtml";
}

<h2>Pilot Index</h2>

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width: 100%;height: 100% " src="~/lib/Pictures/user.png" />
    </div>
    <div class="col-sm-9">

        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon Numarası</th>
                <td>@Model.PhoneNumber</td>
            </tr>

        </table>
    </div>

</div>