<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">


            <a class="navbar-brand" href="#">PeerPilot.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="Pilot">Pilot Ana Sayfası <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 10px">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()

            </div>
            <div class="col-md-4">
                <h3>Menu</h3>

                <a class="btn btn-info btn-block" asp-action="ChangePassword" asp-controller="Pilot">Sifre degistirme</a>
                <a class="btn btn-info btn-block" asp-action="EditUser" asp-controller="Pilot">Bilgi guncelleme</a>
                <a class="btn btn-info btn-block" asp-action="Logout" asp-controller="Pilot" asp-route-returnUrl="/Home/Index">Cikis yap</a>
                <a class="btn btn-info btn-block" asp-action="CreateSupportRequest" asp-controller="Pilot"> Destek Talep Et</a>
            </div>
        </div>

    </div>
</body>
</html>
