@model List<AppUser>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h4>Üyeler</h4>

<hr />
<table class="table table-bordered table-striped">

    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol atama</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hicbir uye yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td user-roles="@user.Id"></td>
                <td><a class="btn btn-success" asp-action="AssignRole" asp-route-id="@user.Id">Rol ata</a></td>
            </tr>
        }
    }

</table>