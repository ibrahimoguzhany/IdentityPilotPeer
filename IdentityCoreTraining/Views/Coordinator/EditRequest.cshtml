@model SupportRequestViewModel

@{
    ViewData["Title"] = "EditRequest";
    Layout = "~/Views/Coordinator/_CoordinatorLayout.cshtml";
}

<h1>Edit Request</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRequest" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeerNote" class="control-label"></label>
                <input asp-for="PeerNote" class="form-control" />
                <span asp-validation-for="PeerNote" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label class="control-label">Choose a Peer for this Request</label>
                <select class="form-control" asp-for="UserId" asp-items="new SelectList(@ViewBag.peers)"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <select class="form-control" asp-for="Status" asp-items="new SelectList(Enum.GetValues(typeof(DataStatus)))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

